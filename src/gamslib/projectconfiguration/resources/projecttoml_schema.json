{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "metadata": {
            "type": "object",
            "properties": {
                "project_id": {
                    "type": "string",
                    "minLength": 2
                },
                "creator": {
                    "type": "string",
                    "minLength": 3
                },
                "publisher": {
                    "type": "string",
                    "minLength": 3
                },
                "rights": {
                    "type": "string"
                }
            },
            "required": [
                "project_id",
                "creator",
                "publisher"
            ]
        },
        "general": {
            "type": "object",
            "properties": {
                "dsid_keep_extension": {
                    "type": "boolean"
                },
                "loglevel": {
                    "type": "string",
                    "enum": ["debug", "info", "warning", "error", "critical"]
                }
            },
            "required": [
                "dsid_keep_extension",
                "loglevel"
            ]
        }

    },
    "required": [
        "metadata",
        "general"
    ]
}